<?xml version='1.0' encoding='utf-8'?>
<widget id="com.devsoftware.pdfreader"
    version="1.0.0"
    xmlns="http://www.w3.org/ns/widgets"
    xmlns:cdv="http://cordova.apache.org/ns/1.0">

    <name>PDFReader</name>
    <description>PDF Reader Application</description>
    <author email="dev@cordova.apache.org" href="https://cordova.apache.org">
        Apache Cordova Team
    </author>

    <!-- UYGULAMA GİRİŞ DOSYASI -->
    <content src="web/index.html" />

    <!-- GENEL AYARLAR -->
    <preference name="Orientation" value="default" />
    <preference name="SplashScreenDelay" value="2000" />
    <preference name="FadeSplashScreenDuration" value="300" />

    <!-- ANDROID AYARLARI -->
    <platform name="android">
        <!-- Minimum / Target / Compile SDK -->
        <preference name="android-minSdkVersion" value="24" />
        <preference name="android-targetSdkVersion" value="36" />
        <preference name="android-compileSdkVersion" value="36" />

        <!-- File API için önerilen ayar -->
        <preference name="AndroidPersistentFileLocation" value="Compatibility" />
    </platform>

    <!-- İzin verilen dış yönlendirmeler -->
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />

    <!-- PLUGINLER (izinleri otomatik ekler) -->
    <plugin name="cordova-plugin-file" />
    <plugin name="cordova-plugin-android-permissions" />
    <plugin name="cordova-plugin-file-opener2" />
    <plugin name="cordova-plugin-dialogs" />
    <plugin name="cordova-plugin-splashscreen" />

</widget>
